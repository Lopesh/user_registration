
<div class="container">
<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6 col-xl-5">
    <div class="card bg-pattern">

      <div class="card-body p-4">

        <div class="text-center w-75 m-auto">
          <p class="text-muted mb-4 mt-3">Enter your email address and password to access admin panel.</p>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-group mb-3">
            <label for="emailaddress">Email address</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",:class=>"form-control",:placeholder=>"Enter your email", autocomplete: 'off' %>
          </div>

          <div class="form-group mb-3">
            <label for="password">Password</label>
            <%= f.password_field :password, autocomplete: "current-password" ,:class=>"form-control",:placeholder=>"Enter your password",:required=>true%>
          </div>
          <% if devise_mapping.rememberable? %>

            <div class="form-group mb-3">
              <div class="custom-control custom-checkbox">
                 <%= f.check_box :remember_me ,:class=>"custom-control-input",:id=>"checkbox-signin",:checked=>true%>

                <label class="custom-control-label" for="checkbox-signin">Remember me</label>
              </div>
            </div>
          <% end %>  

          <div class="form-group mb-0 text-center">
            <%= f.submit "Log In",:class=>"btn btn-primary btn-block" %>
          </div>

        <% end %>

      </div> <!-- end card-body -->
    </div>
    <!-- end card -->

    <div class="row mt-3">
      <div class="col-12 text-center">
        <%= render "devise/shared/links" %>
       
      </div> 
    </div>
    <!-- end row -->

  </div> <!-- end col -->
</div>
<!-- end row -->
</div>

