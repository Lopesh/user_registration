<div class="" style="margin-top:15px;">
  <% flash.each do |key, value| %>
  	<% if value.present? %>
	    <div class="<%= flash_class(key) %>" role="alert">
	      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	      <%= value.html_safe %>
	    </div>
    <% end %>
  <% end %>
</div>