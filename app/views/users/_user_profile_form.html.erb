<div class="form-group col-md-4">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: false, autocomplete: "email", class: "form-control" %>
</div>
<div class="form-group col-md-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: false, autocomplete: "email", class: "form-control" %>
</div>

<%= f.fields_for :profile, @profile  do |profile_fields| %>
    <div class="form-group col-md-4">
        <%= profile_fields.label :address_line %>
        <%= profile_fields.text_field :address_line, class: "form-control" %>
    </div>
    <div class="form-group col-md-4">
        <%= profile_fields.label :street %>
        <%= profile_fields.text_field :street, class: "form-control"  %>
    </div>
    <div class="form-group col-md-4">
        <%= profile_fields.label :landmark %>
        <%= profile_fields.text_field :landmark, class: "form-control"  %>
    </div>
    <div class="form-group col-md-4">
        <%= profile_fields.label :city %>
        <%= profile_fields.text_field :city, class: "form-control"  %>
    </div>
    <div class="form-group col-md-4">
        <%= profile_fields.label :state %>
        <%= profile_fields.text_field :state, class: "form-control"  %>
    </div>
    <div class="form-group col-md-4">
        <%= profile_fields.label :pin_code %>
        <%= profile_fields.text_field :pin_code, class: "form-control"  %>
    </div>
    <div class="form-group col-md-4">
        <%= profile_fields.label :avatar %>
        <%= profile_fields.file_field :avatar, multiple: false, class: "form-control" %>
    </div>
<% end %> 